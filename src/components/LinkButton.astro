---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a
  class="px-4 py-2 rounded-lg border-2 border-black hover:text-gray-500 hover:border-gray-400 dark:border-slate-200 dark:hover:border-zinc-500 dark:text-slate-200 dark:hover:text-zinc-400 transition-all duration-200"
  href={href}
  target="_blank"
  rel="noopener">
  <slot />
</a>
